{% extends 'base.unconnected.html.twig' %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
 
		<div class="col-sm-3"></div>
        <div class="col-sm-6">
                <form action="{{ path('user_login') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i>{{ 'user.connection'|trans }}</legend>
                        <div class="form-group">
                            <label for="username">{{ 'user.name'|trans }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'user.password'|trans }}</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i>{{ 'user.login'|trans }}
                        </button>
                    </fieldset>
                </form>
        </div>
		<div class="col-sm-3"></div>

{% endblock %}


{% block javascripts %}

<script>document.getElementById('username').focus();</script>

{% endblock %}
